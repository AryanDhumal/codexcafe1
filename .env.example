APP_NAME=CodexCafe
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://codexcafe.up.railway.app

LOG_CHANNEL=stack
LOG_LEVEL=error

# No database needed
DB_CONNECTION=sqlite

# Sessions (use file driver instead of database)
SESSION_DRIVER=file
SESSION_LIFETIME=120

CACHE_STORE=file
QUEUE_CONNECTION=sync
FILESYSTEM_DISK=local

# Mail settings (use log to avoid actual sending)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@codexcafe.com"
MAIL_FROM_NAME="${APP_NAME}"

# Vite
VITE_APP_NAME="${APP_NAME}"
